<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jsm.mapper.MemberMapper">
    <select id="readMaxMemberId" resultType="Member">
      select nvl(max(user_id),0)+1
      from member
    </select>

    <select id="readMemberList" resultType="Member">
      select
          user_id
        , user_name
        , use_yn
      from member where 1=1
    </select>

    <select id="readMemberInfo" resultType="Member">
      select
          user_id
        , user_name
        , use_yn
      from member where 1=1
      and user_id = #{userId}
    </select>

    <insert id="addMember">
      insert into member
      values(#{userId}, #{userName}, 'Y')
    </insert>

    <update id="updateMember">
      update member
      set user_name = {userName}
      where user_id = {userId}
    </update>

    <update id="deleteMember">
        update member
        set use_yn = 'N'
        where user_id = {userId}
    </update>
</mapper>