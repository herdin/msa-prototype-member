<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jsm.mapper.MemberMapper">
    <select id="readMaxMemberId" resultType="Member">
      select nvl(max(userid),0)+1
      from member
    </select>

    <select id="readAllMemberInfo" resultType="Member">
      select
          userid
        , username
      from member where 1=1
    </select>

    <select id="readMemberInfo">
      select
          userid
        , username
      from member where 1=1
      and userid = #{userid}
    </select>

    <insert id="addMember">
      insert into member
      values(#{userid}, #{username})
    </insert>

</mapper>